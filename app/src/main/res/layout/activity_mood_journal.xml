<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Header that flows around notch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="24dp"
        android:gravity="center_vertical"
        android:id="@+id/headerBar"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Journal"
            android:textColor="@color/hydration_blue_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Inspirational quote that flows around notch -->
    <TextView
        android:id="@+id/inspirationalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Every emotion is a messenger, carrying valuable insights about your inner world. By tracking your moods, you're not just recording feelingsâ€”you're mapping the landscape of your heart and mind. This journey of self-awareness helps you recognize patterns, celebrate joyful moments, and navigate challenges with greater wisdom and compassion."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:alpha="0.8" />

    <!-- Content that flows around notch -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inspirationalText"
        android:layout_above="@id/bottom_navigation"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:padding="20dp">

            <!-- Calendar Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColor="@color/hydration_blue_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/calendar_background" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add Mood Button -->
            <Button
                android:id="@+id/addMoodButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_primary_gradient"
                android:text="+ Log Your Mood"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <!-- Mood Entries List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moodRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/profile_gradient_background"
        android:elevation="8dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemPaddingBottom="20dp"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<!-- Custom layout that flows content around the notch area -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content container that flows around notch -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- Header area that can flow around notch -->
        <LinearLayout
            android:id="@+id/header_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:minHeight="56dp">

            <!-- Left side content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <!-- Back button or title can go here -->
                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WellnessHub"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/hydration_blue_primary" />

            </LinearLayout>

            <!-- Right side content (can flow around notch) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <!-- Action buttons or icons can go here -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_water_drop"
                    android:tint="@color/seafoam_teal" />

            </LinearLayout>

        </LinearLayout>

        <!-- Content area that flows around notch -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Content goes here and will flow around notch -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content flows around the notch area"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_margin="16dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>

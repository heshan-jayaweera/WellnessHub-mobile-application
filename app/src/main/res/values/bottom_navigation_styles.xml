<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationTextInactive</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="CustomBottomNavigationTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hydration_blue_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBottomNavigationTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/surface_dark</item>
    </style>
</resources>
